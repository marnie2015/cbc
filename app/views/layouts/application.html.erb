<!DOCTYPE html>
<html>
  <head>
    <title>Crossroad Baptist Church</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
      var elems = document.querySelectorAll('.sidenav');
      var instances = M.Sidenav.init(elems);
    });
    </script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo c-yellow"><img src="/assets/logo.jpg" width="180px;"></a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger button-collapse"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a class="c-yellow <%= 'active' if action_name == 'index' %>" href="/">HOME</a></li>
          <li><a class="c-yellow <%= 'active' if action_name == 'heaven' %>" href="/heaven">HEAVEN</a></li>
          <li><a class="c-yellow <%= 'active' if action_name == 'contact' %>" href="/contact">CONTACT US</a></li>
        </ul>
      </div>
    </nav>
    <ul class="sidenav" id="mobile-demo">
      <li class="<%= 'active' if action_name == 'index' %>"><a href="/">HOME</a></li>
      <li class="<%= 'active' if action_name == 'heaven' %>"><a href="/heaven">HEAVEN</a></li>
      <li class="<%= 'active' if action_name == 'contact' %>"><a href="/contact">CONTACT US</a></li>
    </ul>
    <%= yield %>
  </body>
</html>